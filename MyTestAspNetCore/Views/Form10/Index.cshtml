@{
    ViewData["Title"] = "Form10";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список организаций</h2>
        </div>
        <div class="col-6 text-center">
            <a asp-controller="Form10" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i> &nbsp; Добавить организацию
            </a>
        </div>
    </div>
    <table class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Рег. №
                </th>
                <th>
                    Сокращенное наименование
                </th>
                <th>
                    ОКПО
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.RegNumber
                    </td>
                    <td width="50%">
                        @obj.ShortYrName
                    </td>
                    <td width="20%">
                        @obj.OKPO
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Form10" asp-action="Edit" asp-route-id="@obj.Id" 
                            class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Редактировать </a>
                            <a asp-controller="Form10" asp-action="ViewForms" asp-route-id="@obj.Id" asp-route-obj="@obj"
                            class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Формы </a>
                            <a asp-controller="Form10" asp-action="Delete" asp-route-id="@obj.Id"
                            class="btn btn-danger mx-2"><i class="bi bi-x-square-fill"></i> Удалить </a>
                        </div>
                    </td>
                </tr>  
            }
        </tbody>
    </table>
</div>