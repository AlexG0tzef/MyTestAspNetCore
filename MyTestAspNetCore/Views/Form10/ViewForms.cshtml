@model OrganizationM
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Список форм</h2>
            </div>
            <div class="col-6 text-center">
                <a asp-controller="Form10" asp-action="CreateForms" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-plus-square-fill"></i> &nbsp; Добавить форму
                </a>
            </div>
        </div>
        <table class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Форма
                </th>
                <th>
                    Дата начала периода
                </th>
                <th>
                    Дата конца периода
                </th>
                <th>
                    Номер корректировки
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.Form)
            {
                <tr>
                    <td width="10%">
                        @obj.Form[0].FormNum
                    </td>
                    <td width="20%">
                        @obj.Form[0].StartPeriod
                    </td>
                    <td width="20%">
                        @obj.Form[0].EndPeriod
                    </td>
                    <td width="20%">
                        @obj.Form[0].CorNum
                    </td>
@*                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Form10" asp-action="Edit" asp-route-id="@obj.Id" 
                            class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Редактировать </a>
                            <a asp-controller="Form10" asp-action="Edit" asp-route-id="@obj.Id" 
                            class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Формы </a>
                            <a asp-controller="Form10" asp-action="Delete" asp-route-id="@obj.Id" 
                            class="btn btn-danger mx-2"><i class="bi bi-x-square-fill"></i> Удалить </a>
                        </div>
                    </td>*@
                </tr>  
            }
        </tbody>
    </table>
    <a asp-controller="Form10" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Вернуться к списку
    </a>
        
    </div>
   
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
